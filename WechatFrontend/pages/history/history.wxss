.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

.back-button {
  display: flex;
  align-items: center;
  padding: 20rpx 0 20rpx 30rpx; /* 增加左padding */
  font-size: 35rpx;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 0; /* 贴紧左侧 */
  top: 80rpx; /* 贴紧顶部 */
  z-index: 10; /* 确保在最上层 */
}

.back-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

/* Tab栏样式 */
.tabs {
  display: flex;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background-color: #07c160;
}

/* 订单列表样式 */
.order-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
  color: #07c160;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 教练信息 */
.coach-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.coach-detail {
  display: flex;
  flex-direction: column;
}

.coach-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coach-level {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

/* 课程信息 */
.course-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
}

.info-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #999;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.action-buttons {
  display: flex;
  width: 400rpx;
  gap: 20rpx;
}

.btn {
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 50rpx;
}

.cancel-btn {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.confirm-btn {
  background-color: #07c160;
  color: #fff;
}

.reorder-btn {
  background-color: #1890ff;
  color: #fff;
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}