/* 基础样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 日期选择器 */
.date-picker {
  padding: 15px;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.date {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.scroll-view {
  display: flex; /* 让滚动视图也按flex布局 */
  flex-direction: row; /* 横向排列 */
  flex-wrap: nowrap; /* 禁止换行 */
  overflow-x: auto; /* 水平滚动 */
  overflow-y: hidden; /* 禁止垂直滚动 */
  white-space: nowrap; /* 防止折行 */
}

/* 外层滚动容器 - 垂直滚动 */
.outer-scroll {
  flex: 1;
  height: calc(100vh - 250px); /* 根据实际高度调整 */
}

/* 内层滚动容器 - 水平滚动 */
.inner-scroll {
  width: 100%;
  height: auto;
}

/* 预定表格容器 - 保持行排列 */
.booking-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  min-height: 100%;
}

/* 时间列 - 固定宽度 */
.time-column {
  width: 80px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

/* 教练列 - 固定宽度 */
.coach-column {
  width: 100px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}


/* 单元格通用样式 - 添加最小高度保证对齐 */
.time-cell, .coach-cell {
  min-height: 40px;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 2px;
  border-radius: 6px;
  font-size: 12px;
  transition: all 0.2s;
  padding: 5px;
  box-sizing: border-box;
  text-align: center;
  word-break: break-all;
}

/* 表头单元格 */
.header-cell {
  background-color: #07c160;
  color: white;
  font-weight: bold;
  position: sticky;
  top: 0;
  z-index: 1;
}

/* 可预定状态 */
.available {
  background-color: #a0e8c3;
  color: #333;
}

/* 已预定状态 */
.booked {
  background-color: #e0e0e0;
  color: #666;
}

/* 课程取消状态 */
.canceled {
  background-color: lightsalmon;
  color: #111;
}

/* 点击效果 */
.coach-cell:active {
  transform: scale(0.95);
}

/* 底部信息 */
.footer {
  padding: 10px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eee;
}

.credit-info {
  font-size: 14px;
  color: #333;
}

.legend {
  display: flex;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 15px;
  font-size: 12px;
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 3px;
  margin-right: 5px;
}

.legend-color.available {
  background-color: #a0e8c3;
}

.legend-color.booked {
  background-color: #e0e0e0;
}