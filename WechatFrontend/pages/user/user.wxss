.container {
  padding: 20px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.nickname {
  margin-top: 10px;
  font-size: 16px;
  font-weight: bold;
}

.credit-info {
  background-color: #f5f5f5;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}

.credit-title {
  font-size: 14px;
  color: #666;
}

.credit-value {
  font-size: 24px;
  font-weight: bold;
  margin: 5px 0;
  color: #07c160;
}

.credit-note {
  font-size: 12px;
  color: #999;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  padding-bottom: 5px;
  border-bottom: 1px solid #eee;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.history-date {
  color: #666;
  font-size: 14px;
}

.history-field, .history-time {
  font-size: 14px;
}